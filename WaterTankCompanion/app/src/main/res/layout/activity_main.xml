<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="embeddedsystems.watertankcompanion.MainActivity">

    <TextView
        android:id="@+id/statusBluetoothTv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:textAlignment="center"
        android:textSize="20sp"
        android:textColor="#000"
        android:layout_alignParentStart="true" />
    <!-- Discoverable Buttton -->
    <!-- Get list of paired devices button -->

    <ImageView
        android:id="@+id/bluetoothIv"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_below="@+id/pairedTV"
        android:layout_alignStart="@+id/pairedTV"
        android:layout_marginStart="48dp"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/offBtn"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Turn Off"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/onBtn"
        android:layout_alignStart="@+id/onBtn" />

    <Button
        android:id="@+id/onBtn"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Turn On"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/statusBluetoothTv"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="64dp" />

    <Button
        android:id="@+id/discoverableBtn"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Discoverable"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/offBtn"
        android:layout_alignStart="@+id/offBtn" />

    <Button
        android:id="@+id/pairedBtn"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text="Get paired devices"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/discoverableBtn"
        android:layout_alignStart="@+id/discoverableBtn" />

    <TextView
        android:id="@+id/pairedTV"
        android:minWidth="200dp"
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:text=""
        android:textColor="#000"
        style="@style/Base.Widget.AppCompat.Button.Colored"
        android:layout_below="@+id/pairedBtn"
        android:layout_alignStart="@+id/pairedBtn" />


</RelativeLayout>
